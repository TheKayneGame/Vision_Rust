<Window x:Class="VisionGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="439*"/>
                <ColumnDefinition Width="333*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="path_image" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="248,10,0,0" VerticalAlignment="Top" Width="75" Click="Path_image_Click"/>
            <TextBox x:Name="path_image_text" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,8,0,0" VerticalAlignment="Top" Width="233"/>
            <Button x:Name="load_image" Content="load" Grid.Column="1" HorizontalAlignment="Left" Margin="248,36,0,0" VerticalAlignment="Top" Width="75" Click="Load_image_Click"/>
            <Image x:Name="image" Height="379" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="419"/>
        </Grid>
    </Grid>
</Window>
